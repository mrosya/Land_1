body {
  margin: 0;
}

.topnav {
  z-index: 1;
  width: 100%;
  overflow: hidden;
  position: fixed;
  top: 0;
  background-color: black;
  color: white;
  height: 30px;
  padding-top: 10px;
  padding-left: 10px;
}
	
img {
  max-width: 100%;
}

h1 {
  position: absolute;
  top: 20px;
  width: 100%;
  text-align:center;
  color: rgb(217, 210, 191);  
}

h2 {
  text-align: center;
}

ul {
  overflow: hidden;
}

/* блоки с товарами */
